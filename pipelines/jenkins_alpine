#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '3', artifactNumToKeepStr: '3'))
        timestamps()
    }
    stages {
        stage("docker build") {
            steps {
                echo "========= alpine build already started ========="
                dir ('docker/simple_alpine') {
                        sh 'ssh root@78.140.171.168 \'git clone https://github.com/zenmike1/jenkins_test && docker build ./jenkins_test/docker/simple_alpine \''
                } 
            }
        }
    }
}
